{%
  set classes = [
    'session-teaser',
    not node.isPublished() ? 'node--unpublished',
  ]
%}

{% embed 'pubsub:details' with {
  label: label|add_suggestion('bare')|render,
  attributes: attributes,
  title_suffix: title_suffix,
  is_training: node.field_is_training.value ? true : false,
  is_non_session: node.field_is_non_session.value ? true : false,
  url,
  content,
  classes: classes|default([])
} only %}

  {% block meta %}
    {% if not is_non_session %}
      {{ content.field_session_category }}
    {% endif %}

    {{ content.field_r }}

    {% if not is_non_session %}
      {{ content.field_audience }}
      {{ content.field_speakers }}
    {% endif %}
  {% endblock meta %}

  {% block description %}
    {{ content.field_description }}
  {% endblock description %}
{% endembed %}
